<Window x:Class="MyFirstProject.LoadingProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstProject"
        mc:Ignorable="d"
        Title="Загрузка DWG" Height="128" Width="370"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None" >
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Загрузка файла DWG..." FontSize="14" Margin="0,0,0,10" />
            <ProgressBar IsIndeterminate="True" Height="15" Width="200" />
        </StackPanel>
    </Grid>
</Window>